            <controller_action_layout_load_before>
                <observers>
                    <algolia_search>
                        <type>singleton</type>
                        <class>algoliasearch/observer</class>
                        <method>useAlgoliaSearchPopup</method>
                    </algolia_search>
                </observers>
            </controller_action_layout_load_before>
        </events>
        <translate>
            <modules>
                <Algolia_Algoliasearch>
                    <files>
                        <default>Algolia_Algoliasearch.csv</default>
                    </files>
                </Algolia_Algoliasearch>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <algoliasearch>
                    <file>algoliasearch.xml</file>
                </algoliasearch>
            </updates>
        </layout>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <algolia_search>
                        <type>singleton</type>
                        <class>algoliasearch/observer</class>
                        <method>addBundleToAdmin</method>
                    </algolia_search>
                </observers>
            </controller_action_layout_load_before>
        </events>
        <translate>
            <modules>
                <Algolia_Algoliasearch>
                    <files>
                        <default>Algolia_Algoliasearch.csv</default>
                    </files>
                </Algolia_Algoliasearch>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <controller before="Mage_Adminhtml">Algolia_Algoliasearch_Adminhtml</controller>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
