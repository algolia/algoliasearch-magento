<?xml version="1.0"?>
<config>
    <sections>
        <algoliasearch translate="label" module="algoliasearch">
            <label>
                <![CDATA[
                Algolia Search 1.5.5
                <style>
                    .algoliasearch-admin-menu span {
                        padding-left: 38px !important;
                        background: url("/skin/frontend/base/default/algoliasearch/algolia-admin-menu.png") 20px 4px no-repeat !important;
                        border-bottom: 1px dotted #636363;
                    }
                    .algoliasearch-admin-menu.active span {
                        background: white url("/skin/frontend/base/default/algoliasearch/algolia-admin-menu.png") 20px 4px no-repeat !important;
                        border-bottom: none;
                    }
                </style>
                ]]>
            </label>
            <class>algoliasearch-admin-menu</class>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>52</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <credentials translate="label">
                    <label>Credentials &amp; Setup</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <comment>
                     <![CDATA[
                        <table>
                            <tr>
                                <td>Documentation:</td>
                                <td><a target="_BLANK" href="https://community.algolia.com/magento/documentation">https://community.algolia.com/magento/documentation</a></td>
                            </tr>
                            <tr>
                                <td>FAQ: </td>
                                <td><a target="_BLANK" href="https://www.algolia.com/doc/faq">https://www.algolia.com/doc/faq</a></td>
                            </tr>
                            <tr>
                                <td>Issues: </td>
                                <td><a target="_BLANK" href="https://github.com/algolia/algoliasearch-magento/issues">https://github.com/algoliasearch-magento/issues</a></td>
                            </tr>
                        </table>
                        <br>
                        <hr>
                        <br>
                     ]]>
                    </comment>
                    <fields>
                        <enable_backend translate="label comment">
                            <label>Enable Indexing</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                If set to No, Algolia extension will simply be disabled.
                                ]]>
                            </comment>
                        </enable_backend>
                        <enable_frontend translate="label comment">
                            <label>Enable Search</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enable_backend>1</enable_backend></depends>
                            <comment>
                                <![CDATA[
                                If set to No, search will be done by Magento but indexing will be done by Algolia
                                ]]>
                            </comment>
                        </enable_frontend>
                        <debug translate="label comment">
                            <label>Enable Logging</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enable_backend>1</enable_backend></depends>
                            <comment>
                                <![CDATA[
                                NOTICE: Debug logging generates a significant amount of data and can affect performance of indexing
                                ]]>
                            </comment>
                        </debug>
                        <application_id translate="label">
                            <label>Application ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Your Application ID, which can be found in the Credentials section of your Algolia account.</comment>
                        </application_id>
                        <api_key translate="label">
                            <label>Admin API key</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Your administration API key (kept private)</comment>
                        </api_key>
                        <search_only_api_key translate="label">
                            <label>Search-only (public) API key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>A search-only API key (will be included in the public JavaScript code)</comment>
                        </search_only_api_key>
                        <index_prefix translate="label">
                            <label>Index Name Prefix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If configured, all indices created by the Algolia search extension will be prefixed by this value.</comment>
                        </index_prefix>
                        <is_popup_enabled translate="label comment">
                            <label>Enable Auto-completion Menu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                If set to Yes, the search box will display a search-as-you-type drop-down menu. It requires your theme to expose a <code>top.search</code> and <code>content</code> block.
                                ]]>
                            </comment>
                        </is_popup_enabled>
                        <is_instant_enabled translate="label comment">
                            <label>Enable Instant Search Results Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                If set to Yes, the products inside the results pages will be searchable the refined results updated as-you-type. It requires your theme to expose a <code>top.search</code> and <code>content</code> block.
                                    <br><br>
                                    <span style="font-size: 30px; color: #D83900">&#9888;</span> Enabling instant search can potentially break your design, some work will be required to have a good integration into your theme
                                    products.
                                ]]>
                            </comment>
                        </is_instant_enabled>
                    </fields>
                </credentials>
                <autocomplete>
                    <label>Autocomplete</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>0</expanded>
                    <fields>
                        <nb_of_products_suggestions translate="label comment">
                            <label>Number of products</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The number of products (>=1) suggested in the autocomplete dropdown. Default value is 6</comment>
                        </nb_of_products_suggestions>
                        <nb_of_categories_suggestions translate="label comment">
                            <label>Number of categories</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The number of categories (>=1) suggested in the autocomplete dropdown. Default value is 2</comment>
                        </nb_of_categories_suggestions>
                        <nb_of_queries_suggestions>
                            <label>Number of queries</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The number of queries suggestions (0 to disabled it) suggested in the autocomplete dropdown. Default value is 0</comment>
                        </nb_of_queries_suggestions>
                        <min_popularity translate="label comment">
                            <label>Min query popularity</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The min number of times a query has been performed in order to be suggested. Default value is 1000.</comment>
                        </min_popularity>
                        <min_number_of_results translate="label comment">
                            <label>Min number of products per query</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                The min number of results a query needs to return to be suggested. Default value is 2. <br /n>
                                ]]>
                            </comment>
                        </min_number_of_results>
                        <sections>
                            <label>Additional Sections</label>
                            <frontend_model>algoliasearch/system_config_form_field_additionalSections</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><active>1</active></depends>
                            <comment>
                                <![CDATA[
                                Configure here the additional auto-completion menu sections you want include in the dropdown menu (Ex. Suggestions, Pages, Manufacturer, Colors).<br /><br>
                                <span style="color: #D83900">&#9888;</span> All attributes used here must have been initially included in the <strong>Attributes Configuration</strong> panel and configured as a facet in the <strong>Instant Search Results Page Configuration</strong> panel to be able to refine on the specific attribute.
                                ]]>
                            </comment>
                        </sections>
                        <excluded_pages translate="label comment">
                            <label>Excluded Pages</label>
                            <frontend_model>algoliasearch/system_config_form_field_excludedPages</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                Configure here the pages you don't want to search in.
                                ]]>
                            </comment>
                        </excluded_pages>
                        <render_template_directives translate="label comment">
                            <label>Render template directives</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                For CMS pages, template directives (e.g. <code>{{block type="core/template" ...}}</code>) will be processed by default. Set this to "No" if you don't want to have template content indexed.<br><br>
                                <span style="font-size: 20px; color: #D83900">&#9888;</span> Do not forget to trigger the Algolia Search indexers whenever you modify those settings.
                                ]]>
                            </comment>
                        </render_template_directives>
                    </fields>
                </autocomplete>
                <instant>
                    <label>Instant Search Results Page</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>0</expanded>
                    <comment>
                     <![CDATA[

                     ]]>
                    </comment>
                    <fields>
                        <instant_selector translate="label comment">
                            <label>DOM Selector</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The DOM selector used to inject the results using JavaScript.</comment>
                        </instant_selector>
                        <facets>
                            <label>Facets</label>
                            <frontend_model>algoliasearch/system_config_form_field_facets</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Configure here the filtering options you want to display on your search results page. Choose Disjunctive to allow the selection of different values of a facet (e.g. hotels with 4 OR 5 stars). Choose Conjunctive to allow the selection of only one value of a facet (e.g. only "Size M").</comment>
                        </facets>
                        <max_values_per_facet translate="label comment">
                            <label>Number of values per facet</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The number of values each facet can display. Default value is 10.</comment>
                        </max_values_per_facet>
                        <sorts>
                            <label>Sorts</label>
                            <frontend_model>algoliasearch/system_config_form_field_sorts</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                Configure here the different sorting options you want to offer.

                                <![CDATA[
                                <br /><br />
                                The extension will create :<br />
                                - 1 index/store<br />
                                - 1 index/store/sort<br /><br />
                                Which means that for a store with:<br />

                                - 2 store (2 languages for example)<br />
                                - 100 products<br />
                                - 2 sorts on price (asc, desc)<br />
                                - 2 sorts on date (asc, desc)<br /><br />

                                You have 100 * 2 + 100 * 4 * 2 = 1000 product records

                                You can reduce the number of records by removing some sort
                                ]]>
                            </comment>
                        </sorts>
                        <replace_categories translate="label comment">
                            <label>Replace categories page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Choose here if you want the default Magento category pages to be replaced by an instant-search results page when a category is selected either in the menu of categories or in the drop-down menu.</comment>
                        </replace_categories>
                        <add_to_cart_enable translate="label comment">
                            <label>Add to Cart</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Choose here if you want to add an "add to cart" button in the template.</comment>
                        </add_to_cart_enable>
                    </fields>
                </instant>
                <products translate="label">
                    <label>Products</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>0</expanded>
                    <comment>
                        <![CDATA[

                     ]]>
                    </comment>
                    <fields>
                        <number_product_results translate="label comment">
                            <label>Number of products per page in the instant result page</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The number of products displayed on the instant search results page. Default value is 9.</comment>
                        </number_product_results>
                        <product_additional_attributes translate="label comment">
                            <label>Attributes</label>
                            <frontend_model>algoliasearch/system_config_form_field_productAdditionalAttributes</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                Choose here the product attributes your users can search on, the ones you want to use as filters and sorts options and the ones required to display the search results.<br><br>
                                 The order of the searchable attributes matters: a query matching the first searchable attribute of a product will put this product before the others in the results. Chose "Ordered" if you want the position of the matching word(s) inside the attribute to matter. A match at the beginning of an attribute will be considered more important: for the query "iPhone", "iPhone 5s" will be ranked before "case for iPhone".<br />
                                <br><span style="font-size: 20px; color: #D83900">&#9888;</span> Do not forget to reindex your Algolia Search index after you've modified this panel.
                                ]]>
                            </comment>
                        </product_additional_attributes>
                        <custom_ranking_product_attributes translate="label comment">
                            <label>Ranking</label>
                            <frontend_model>algoliasearch/system_config_form_field_customRankingProductAttributes</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                Configure here the attributes that reflect the popularity of your product (number of orders, number of likes, number of views, ...).<br />
                                <span style="color: #D83900">&#9888;</span> All attributes used here must have been initially included in the Attributes configuration panel.
                                ]]>
                            </comment>
                        </custom_ranking_product_attributes>
                        <show_suggestions_on_no_result_page translate="label comment">
                            <label>Show most popular queries suggestions when there are no results</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                    Choose here if you want to show most popular queries suggestions when there are no results/
                                ]]>
                            </comment>
                        </show_suggestions_on_no_result_page>
                        <index_out_of_stock_options translate="label comment">
                            <label>Index out of stock options for configurable products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                    Choose here if you want to index out of stock options for configurable products
                                ]]>
                            </comment>
                        </index_out_of_stock_options>
                    </fields>
                </products>
                <categories translate="label">
                    <label>Categories</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>0</expanded>
                    <comment>
                     <![CDATA[

                     ]]>
                    </comment>
                    <fields>
                        <category_additional_attributes2 translate="label comment">
                            <label>Attributes</label>
                            <frontend_model>algoliasearch/system_config_form_field_categoryAdditionalAttributes</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                Configure here the category attributes your users can search on. The order of these attributes matters: the higher in the list, the more important to rank the results.<br />
                                <span style="color: #D83900">&#9888;</span> Do not forget to reindex your Algolia Search index after you've modified this panel.
                                ]]>
                            </comment>
                        </category_additional_attributes2>
                        <custom_ranking_category_attributes translate="label comment">
                            <label>Ranking</label>
                            <frontend_model>algoliasearch/system_config_form_field_customRankingCategoryAttributes</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                Choose here the attributes that reflect the popularity of your categories (number of products, total number of sales of the category,etc.).<br />
                                <span style="color: #D83900">&#9888;</span> All attributes used here must have been included before in the Attributes chart.
                                ]]>
                            </comment>
                        </custom_ranking_category_attributes>
                        <show_cats_not_included_in_navigation translate="label comment">
                            <label>Show categories that are not included in the navigation menu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                If set to Yes, Algolia will display all categories in the autocomplete menu ignoring the setting: "Include in navigation menu". Default value: false
                                ]]>
                            </comment>
                        </show_cats_not_included_in_navigation>
                    </fields>
                </categories>
                <image translate="label">
                    <label>Images</label>
                    <expanded>0</expanded>
